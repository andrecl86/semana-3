
# Programación Orientada a Objetos (POO)

Clase  ClimaDiario :
    def  __init__ ( yo mismo ):
        auto . temperaturas  = []
# El usuario ingresa el valor de la temperatura de cada día.
    def  ingresar_temperaturas_diarias ( self ):
        para  i  en  el rango ( 7 ):
            temp  =  float ( input ( f"Ingrese la temperatura para el día { i  +  1 } : " ))
            auto.temperaturas.anexar ( temp )​​​​
# Calcular el promedio de la temperatura semanal
    def  calcular_promedio_semanal ( self ):
        promedio  =  suma ( self . temperaturas ) /  len ( self . temperaturas )
        retorno  promedio
# Imprima el valor de la temperatura semanal
definición  principal ():
    clima  =  ClimaDiario ()
    clima . ingresar_temperaturas_diarias ()
    promedio_semanal  =  clima . calcular_promedio_semanal ()
    print ( f"El promedio semanal de temperaturas es: { promedio_semanal :.2f } " )

si  __nombre__  ==  "__principal__" :
    principal ()
